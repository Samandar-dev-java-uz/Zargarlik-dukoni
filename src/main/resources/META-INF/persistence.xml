<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="ORM_TEST">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity classlar -->
        <class>com.example.zargarshop.entity.Attachment</class>
        <class>com.example.zargarshop.entity.Post</class>
        <class>com.example.zargarshop.entity.Product</class>
        <class>com.example.zargarshop.entity.Category</class>
        <class>com.example.zargarshop.entity.Comment</class>
        <class>com.example.zargarshop.entity.User</class>
        <class>com.example.zargarshop.entity.Product</class>
        <class>com.example.zargarshop.entity.OrderItem</class>
        <class>com.example.zargarshop.entity.Order</class>
        <class>com.example.zargarshop.entity.</class>

        <!-- DB konfiguratsiyasi -->
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/test_hibernate" />
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="root123"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
